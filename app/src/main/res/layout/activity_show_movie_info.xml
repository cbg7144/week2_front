<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieInfoAndComment.ShowMovieInfo">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fadmovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/QuizGameTitle"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:text="영화 상세정보"
        android:textSize="24sp"
        android:fontFamily="@font/nanumgothic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <LinearLayout
        android:id="@+id/linearLayoutShowMovieInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">
        <View
            android:layout_width="5dp" android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/PosterShowMovieInfo"
            android:layout_width="145dp"
            android:layout_height="211dp"
            android:padding="5dp" />
        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/linearLayoutShowMovieInfo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothicextrabold"
                android:padding="5dp"
                android:text="영화 제목"
                android:textSize="20sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/genreShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="장르"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/runtimeShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="상영시간"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/rlsDateShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="개봉일자"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/ratingShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="등급"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/dirNmShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="감독"
                android:textSize="13sp" />

            <View
                android:layout_width="16dp"
                android:layout_height="5dp" />

            <TextView
                android:id="@+id/actorShowMovieInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothic"
                android:padding="5dp"
                android:text="배우"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutShowMovieInfo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_line_list_searched_movie"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutShowMovieInfo1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스틸컷"
            android:fontFamily="@font/nanumgothicextrabold"
            android:padding="10dp"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/StealCutShowMovieInfo"
            android:layout_width="243dp"
            android:layout_height="110dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.553"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:layout_width="16dp"
            android:layout_height="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutShowMovieInfo3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감상평"
            android:fontFamily="@font/nanumgothicextrabold"
            android:padding="10dp"
            android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>